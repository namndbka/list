<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/kq1"
        android:background="#DDDDDD"
        android:textSize="72sp"
        android:gravity="center|right"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/spinner1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/kq2"
        android:background="#DDDDDD"
        android:textSize="72sp"
        android:gravity="center|right"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/spinner2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:id="@+id/chay"
            android:text="Do"
            android:textSize="40sp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:text="CE"
            android:id="@+id/CE"
            android:textSize="40sp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/C"
            android:textSize="40sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/so7"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:id="@+id/so8"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:id="@+id/so9"
            android:background="#EEEEEE"
            android:textSize="40sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:id="@+id/so4"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:id="@+id/so5"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:id="@+id/so6"
            android:background="#EEEEEE"
            android:textSize="40sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/so1"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:id="@+id/so2"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:id="@+id/so3"
            android:background="#EEEEEE"
            android:textSize="40sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="40sp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/so0"
            android:background="#EEEEEE"
            android:textSize="40sp" />

        <Button
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="40sp" />


    </LinearLayout>

</LinearLayout>